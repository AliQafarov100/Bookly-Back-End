@model List<Order>

@{
    ViewData["Title"] = "Orders";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Delivery City
                            </th>
                            <th>
                                Delivery Address
                            </th>
                            <th>
                                Client FullName
                            </th>
                            <th>
                                Client Email
                            </th>
                            <th>
                                Order Totalprice
                            </th>
                            <th>
                                Order Status
                            </th>
                            <th>
                                More Informarion..
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Order order in Model)
                        {
                            <tr>
                                <td>
                                    @order.Id
                                </td>
                                <td>
                                    @order.City.Name
                                </td>
                                <td>
                                    @order.Address
                                </td>
                                <td>
                                    @(order.AppUser.FirstName + " " + order.AppUser.LastName)
                                </td>
                                <td>
                                    @order.AppUser.Email
                                </td>
                                <td>
                                    @order.TotalPrice
                                </td>
                                @if (order.Status == null)
                                {
                                    <td>
                                        <p class="bg-gradient-secondary text-center text-dark">Pending</p>
                                    </td>
                                }
                                else if (order.Status == true)
                                {
                                    <td>
                                        <p class="bg-success text-center text-dark">Accept</p>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <p class="bg-danger text-center text-dark">Reject</p>
                                    </td>
                                }
                                <td class="d-flex">
                                    <div>
                                        <a class="btn btn-success" asp-controller="Order" asp-action="Edit" asp-route-id="@order.Id" asp-route-username="@order.AppUser.UserName"><i class="mdi mdi-tooltip-edit"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
