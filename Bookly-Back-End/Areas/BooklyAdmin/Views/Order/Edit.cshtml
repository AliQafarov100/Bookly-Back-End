@model Order
@{
    ViewData["Title"] = "Edit";
}
<div>
    <div class="d-flex">
        <p>Id: </p>
        <h4 class="ms-3">@Model.Id</h4>
    </div>
    <div class="d-flex">
        <p>Delivery Address:</p>
        <h4 class="ms-3">@Model.Address</h4>
    </div>
    <div class="d-flex">
        <p>Client Fullname:</p>
        <h4 class="ms-3">@(Model.AppUser.FirstName + " " + Model.AppUser.LastName)</h4>
    </div>
    <div class="d-flex">
        <p>Client Email:</p>
        <h4 class="ms-3">@Model.AppUser.Email</h4>
    </div>
    <div class="d-flex">
        <p>Delivery City:</p>
        <h4 class="ms-3">@Model.City.Name</h4>
    </div>
    <div class="d-flex">
        <p>Order Date:</p>
        <h4 class="ms-3">@Model.OrderDate.ToString("HH:mm dd,MMMM,yyyy")</h4>
    </div>
    <div class="d-flex">
        <p>Order TotalPrice:</p>
        <h4 class="ms-3">@Model.TotalPrice</h4>
    </div>
    <h4>Order Product Item:</h4>
    <div class="row">
        @foreach (OrderProduct item in Model.OrderProducts)
        {
            <div class="col-lg-4 mt-2">
                <img class="" style="height: 650px; width: 90%;" src="~/assets/Image/Library/@item.Book.BookImages.FirstOrDefault(i => i.IsMain == true)?.ImagePath" /> <br />
                <strong>@item.Book.Name</strong> <br />
                <strong>
                    $
                    @(item.Book.DiscountId != null ? (item.Book.Price - ((item.Book.Price * item.Book.Discount.DiscountPercent) / 100)) : (item.Book.Price))
                </strong> <br />
                <strong>
                    Count:
                    @(Math.Floor(item.Book.DiscountId != null ? (Model.TotalPrice / (item.Book.Price - ((item.Book.Price * item.Book.Discount.DiscountPercent) / 100))) : Model.TotalPrice / item.Book.Price))
                </strong>
            </div>
        }
    </div>

    <div>
        <strong>@ViewBag.Message</strong>

        <input class="message" cols="45" rows="10" />

        <div class="mt-5">
            <a asp-controller="Order" asp-action="Accept" asp-route-id="@Model.Id" class="btn btn-success accept">
                <i class="mdi mdi-file-check btn-icon-append"></i>
                Accept
            </a>
            <a asp-controller="Order" asp-action="Reject" asp-route-id="@Model.Id" class="btn btn-danger reject">
                <i class="mdi mdi-file-check btn-icon-append"></i>
                Reject
            </a>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $(".accept").click(function (e) {
                e.preventDefault();
                var message = $(".message").val();
                var link = $(this).attr("href") + "/?message=" + message
                fetch(link).then(end => end.json()).then(datas => {
                    if (datas.status == 200) {
                        location.href = "https://localhost:44339/BooklyAdmin/Order/Orders"
                    }
                })
            })

        })
        $(document).ready(function () {
            $(".reject").click(function (e) {
                e.preventDefault();
                var message = $(".message").val();
                var link = $(this).attr("href") + "/?message=" + message
                fetch(link).then(end => end.json()).then(datas => {
                    if (datas.status == 200) {
                        location.href = "https://localhost:44339/BooklyAdmin/Order/Orders"
                    }
                })
            })

        })
    </script>
}

