@model Author
@{
    ViewData["Title"] = "Read";
}

<div>
    <div>
        <h4>Id: </h4>
        <p>@Model.Id</p>
    </div>
    <div>
        <h4>Title:</h4>
        <p>@Model.FullName</p>
    </div>
    <div>
        <h4>SubTitle:</h4>
        <p>@Model.Comments</p>
    </div>
    <div>
        <h4>Discount:</h4>
        <p>@Model.IsBest</p>
    </div>
    <div>
        <h4>Image:</h4>
        <img style="width: 300px; height:400px" src="~/assets/Image/AuthorImage/@Model.Image" />
    </div>
    <div>
        <h4>Awards:</h4>
        @foreach (var award in Model.AuthorAwards.Where(a => a.AuthorId == Model.Id))
        {
            <img style="width: 200px; height:200px" src="~/assets/Image/Awards/@award.Award?.Image" />
        }
    </div>
</div>
<form method="post" class="mt-5">
    <button class="btn btn-primary" asp-action="Index">Back to List</button>
</form>

