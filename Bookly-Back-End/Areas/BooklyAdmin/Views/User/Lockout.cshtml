@model AppUser
@{
    ViewData["Title"] = "Lockout";
}

<h3>Lockout user</h3>
<div>
    <div>
        <p>First Name: </p>
        <h4>@Model.FirstName</h4>
    </div>
    <div>
        <p>Last Name:</p>
        <h4>@Model.LastName</h4>
    </div>
    <div>
        <p>Email:</p>
        <h4>@Model.Email</h4>
    </div>
    <div>
        <p>Username:</p>
        <h4>@Model.UserName</h4>
    </div>

    <form method="post">
        <div class="form-check d-flex justify-content-between mb-4" style="height: 75px; width: 100px;">
            <h4 class="mt-3">Block</h4>
            <input class="form-check-input" style="width: 50px; height: 50px; border-radius: 10px;" type="checkbox" asp-for="IsBlock" />
        </div>
        <div class="mt-5">
            <button type="submit" class="btn btn-primary">Confirm</button>
        </div>
        <div class="mt-5">
            <button type="submit" asp-action="Users" class="btn btn-primary">Back To List</button>
        </div>
    </form>
</div>
