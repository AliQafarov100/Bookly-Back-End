                                <select name="" id="">
                                    <option value=""><a href="">Featured</a></option>
                                    <option value=""><a href="">Best selling</a></option>
                                    <option value=""><a href="">Alphabetcally,A-Z</a></option>
                                    <option value=""><a href="">Alphabetcally,Z-A</a></option>
                                    <a asp-controller="Book" asp-action="Index" asp-route-highToLow="high">
                                      <option>Price,high to low</option>
                                    </a>
                                </select>
                            </div>
                        </div>
                        <div class="row booking mt-5">
                            @foreach (Book sellBook in Model.AllBooks.Take(9))
                            {
                                <div class="col-lg-4 col-md-6 col-sm-6 col-12">
                                    <div class="info-book">
                                        <div class="images">
                                            <div class="more-icon">
                                                <div class="more">
                                                    <a href=""><i class="fa-solid fa-link"></i></a>
                                                </div>
                                                <div class="more">
                                                    <a href=""><i class="fa-solid fa-heart"></i></a>
                                                </div>
                                                <div class="more">
                                                    <a href=""><i class="fa-solid fa-magnifying-glass"></i></a>
                                                </div>
                                            </div>
                                            <img src="assets/Image/Library/@sellBook.BookImages.FirstOrDefault(i => i.IsMain == true).ImagePath" alt="">
                                        </div>
                                        <div class="detail mt-3">
                                            <p>
                                                @foreach (BookAuthor author in Model.BookAuthors.Where(a => a.BookId == sellBook.Id))
                                                {
                                                    @author.Author.FullName.ToUpper().ToString();
                                                }
                                            </p>
                                            <strong>@sellBook.Name</strong><br />
                                            @if (sellBook.DiscountId != null)
                                            {
                                                <span>$@(sellBook.Price - ((sellBook.Price * sellBook.Discount.DiscountPercent) / 100))</span>
                                                <span><del>$@sellBook.Price</del></span>
                                            }
                                            else
                                            {
                                                <span>@sellBook.Price</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }

                            <nav aria-label="Page navigation example" class="pagination">
                                <ul class="pagination">
                                    <li class="page-item">
                                        <a class="page-link text-light" href="#" aria-label="Previous">
                                            <span aria-hidden="true">&laquo;</span>
                                        </a>
                                    </li>

                                    @for (int i = 1; i <= ViewBag.TotalPage; i++)
                                    {
                                        <li class="page-item"><a class="page-link counter text-light" asp-controller="Book" asp-action="Index" asp-route-page="@i">@i</a></li>
                                    }
                                    <li class="page-item">
                                        <a class="page-link text-light" href="#" aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
