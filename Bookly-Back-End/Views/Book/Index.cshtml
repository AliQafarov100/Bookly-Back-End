                                <div class="format col-lg-4">
                                    <div class="formats text-center filter">
                                        <a href=""><small>@format.Name</small></a>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                    <div class="byLanguage mt-5">
                        <h4>Shop By Language</h4>
                        <div class="row">
                            @foreach (Language language in Model.Languages)
                            {
                                <div class="language col-lg-4">
                                    <div class="languages text-center filter">
                                        <a href=""><small>@language.Name</small></a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="byAuthor mt-5">
                        <h4>Shop By Author</h4>
                        <div class="row">

                            @foreach (Author author in Model.Authors)
                            {
                                <div class="author col-lg-5">
                                    <div class="authors  text-center filter">
                                        <a asp-controller="Book" asp-action="Index" asp-route-author="@author.Id"><small>@author.FullName</small></a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="byTopic mt-5">
                        <h4>Shop By Topic</h4>
