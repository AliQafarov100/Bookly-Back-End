                                </div>
                            }
                        </div>
                    </div>
                    <h4 class="mt-5">Best Selers</h4>
                    <div class="bookSlider mt-5 col-lg-12">
                        <div class="sliderItem">
                            <div class="sliders d-flex">
                                @foreach (Book book in Model.AnotherBooks.OrderByDescending(b => b.Id).Where(b => b.IsBest == true))
                                {
                                    <div class="slider">
                                        <div class="slider-book">
                                            <div class="images">
                                                <div class="more-icon">
                                                    <div class="more">
                                                        <a href=""><i class="fa-solid fa-link"></i></a>
                                                    </div>
                                                    <div class="more">
                                                        <a href=""><i class="fa-solid fa-heart"></i></a>
                                                    </div>
                                                    <div class="more">
                                                        <a href=""><i class="fa-solid fa-magnifying-glass"></i></a>
                                                    </div>
                                                </div>
                                                <img src="assets/Image/Library/@book.BookImages.FirstOrDefault(i => i.IsMain == true)?.ImagePath" alt="">
                                            </div>
                                            <div class="detail mt-3">
                                                <p>
                                                    @foreach (BookAuthor author in Model.BookAuthors.Where(a => a.BookId == book.Id))
                                                    {
                                                        @author.Author.FullName.ToString();
                                                    }
                                                </p>
                                                <strong>@book.Name</strong>
                                                <p>
                                                    @if (book.DiscountId != null)
                                                    {
                                                        <span>$@(book.Price - ((book.Price * book.Discount?.DiscountPercent) / 100))</span>
                                                        <span class="ms-2"><del>$@book.Price</del></span>
                                                    }
                                                    else
                                                    {
                                                        <span>$@book.Price</span>
                                                    }

                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="btns d-flex">
                            <div class="btn leftBtn">
                                <i class="fa-solid fa-angle-left"></i>
                            </div>
                            <div class="btn rightBtn">
                                <i class="fa-solid fa-angle-right"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-9">
                    <div class="container">
                        <div class="filtered row justify-content-between align-items-center">
                            <div class="systems d-flex align-items-center col-lg-4 mb-3">
                                <div class="grid system"><i class="fa-solid fa-grip"></i></div>
                                <div class="list system"><i class="fa-solid fa-list"></i></div>
                            </div>
