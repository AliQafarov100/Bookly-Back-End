@model RegisterVM
@{
    ViewData["Title"] = "Register";
}
<!-- Section: Design Block -->
<section id="intro">
    <div class="container">
        <div class="write  d-flex justify-content-center align-items-center">
            <div class="texts">
                <h4 class="text-center">Account</h4>
                <ul class="d-flex justify-content-around">
                    <li><a href="Collections.html">All</a></li>
                    <li><a href="">Product</a></li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section class="">
    <!-- Jumbotron -->
    <div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: white;">
        <div class="container">
            <div class="row gx-lg-5 align-items-center justify-content-center">
              <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                <div class="col-lg-6 mb-5 mb-lg-0" style="background-color: whitesmoke;">
                    <div class="card" style="border: none">
                        <div class="card-body py-5 px-md-5" style="background-color: whitesmoke;">
                            <form method="post">
                                <!-- 2 column grid layout with text inputs for the first and last names -->
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <label>First Name</label>
                                            <input asp-for="FirstName" placeholder="First Name" class="form-control" /><br />
                                            <span class="text text-danger" asp-validation-for="FirstName"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <label>Last Name</label>
                                            <input asp-for="LastName" placeholder="Last Name" class="form-control" /><br />
                                            <span class="text text-danger" asp-validation-for="LastName"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Email input -->
                                <div class="form-outline mb-4">
                                    <label>Username</label>
                                    <input asp-for="Username" placeholder="Username" class="form-control" /><br />
                                    <span class="text text-danger" asp-validation-for="Username"></span>
                                </div>
                                
                                <!-- Password input -->
                                <div class="form-outline mb-4">
                                    <label>Password</label>
                                    <input asp-for="Password" placeholder="Password" class="form-control" /><br />
                                    <span class="text text-danger" asp-validation-for="Password"></span>
                                </div>
                                <div class="form-outline mb-4">
                                    <label>Confirm Password</label>
                                    <input asp-for="ConfirmPassword" placeholder="ConfirmPassword" class="form-control" /><br />
                                    <span class="text text-danger" asp-validation-for="ConfirmPassword"></span>
                                </div>

                                <!-- Checkbox -->
                                <div class="form-check d-flex justify-content-center mb-4">
                                    <input class="form-check-input me-2" type="checkbox" value="" id="form2Example33" />
                                    <label class="form-check-label" for="form2Example33">
                                        Subscribe to our newsletter
                                    </label>
                                </div>

                                <!-- Submit button -->
                                <button type="submit" class="btn btn-primary btn-block mb-4">
                                    Register
                                </button>

                                <!-- Register buttons -->
                                <div class="text-center">
                                    <p>or sign up with:</p>
                                    <button type="button" class="btn btn-link btn-floating mx-1">
                                        <i class="fab fa-facebook-f"></i>
                                    </button>

                                    <button type="button" class="btn btn-link btn-floating mx-1">
                                        <i class="fab fa-google"></i>
                                    </button>

                                    <button type="button" class="btn btn-link btn-floating mx-1">
                                        <i class="fab fa-twitter"></i>
                                    </button>

                                    <button type="button" class="btn btn-link btn-floating mx-1">
                                        <i class="fab fa-github"></i>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->