@model AccountVM
@{
    ViewData["Title"] = "ResetPassword";
}

<section id="intro">
    <div class="container">
        <div class="write  d-flex justify-content-center align-items-center">
            <div class="texts">
                <h4 class="text-center">Account</h4>
                <ul class="d-flex justify-content-around">
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Account" asp-action="Login">Account</a></li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section class="">
    <!-- Jumbotron -->
    <div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: white;">
        <div class="container">
            <div class="row gx-lg-5 align-items-center justify-content-center">
                <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                <div class="col-lg-6 mb-5 mb-lg-0" style="background-color: whitesmoke;">
                    <div class="card" style="border: none">
                        <div class="card-body py-5 px-md-5" style="background-color: whitesmoke;">
                            <h1>Reset Password</h1>
                            <form method="post">
                                <!-- 2 column grid layout with text inputs for the first and last names -->
                                <!-- Email input -->
                                <div class="form-outline mb-4">
                                    <label>Please enter new password</label><br />
                                    <input asp-for="Password" class="form-control" />
                                </div>
                                <div class="form-outline mb-4 d-none">
                                    <input asp-for="Token" class="form-control" />
                                    <input asp-for="AppUser.Email" class="form-control" />
                                </div>
                                <div class="form-outline mb-4">
                                    <label>Please confirm new password</label><br />
                                    <input asp-for="ConfirmPassword" class="form-control" />
                                </div>
                                <button type="submit" class="btn btn-outline-primary">Send</button>
                                <!-- Register buttons -->
                                <div class="text-center">
                                    <p>or sign up with:</p>
                                    <button type="button" class="btn btn-link btn-floating mx-1">
                                        <i class="fab fa-facebook-f"></i>
                                    </button>

                                    <button type="button" class="btn btn-link btn-floating mx-1">
                                        <i class="fab fa-google"></i>
                                    </button>

                                    <button type="button" class="btn btn-link btn-floating mx-1">
                                        <i class="fab fa-twitter"></i>
                                    </button>

                                    <button type="button" class="btn btn-link btn-floating mx-1">
                                        <i class="fab fa-github"></i>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Jumbotron -->
</section>
@section Scripts{
    <script src="~/assets/Js/search.js"></script>
}
