    <section id="main-section" style="background-image: url(/assets/Image/Slider/@Model.Slayd.Image);">
        <div class="container">
            <div class="items d-flex align-items-center">
                <div class="description">
                    <p>@Model.Slayd.Title</p>
                    <h1>@Model.Slayd.Subtitle</h1>
                    <small class="">
                        @Model.Slayd.Description
                    </small> <br>
                    <a asp-controller="Book" asp-action="Index" class="btn btn-danger mt-4">Shop Now</a>
                </div>
            </div>
        </div>
    </section>
    <section id="others" class="py-4">
        <div class="container">
            <div class="row justify-content-between">

                @foreach (Support support in Model.Supports)
                {
                    <div class="col-lg-3 d-flex cards">
                        <div class="images">
                            <img src="~/assets/Image/Others/@support.Image" alt="">
                        </div>
                        <div class="ms-3">
                            <strong>@support.Title</strong> <br>
                            <small>@support.Description</small>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <section id="library-section" class="py-5">
        <h3 class="text-center">@service.GetData().Result.FirstOrDefault(a => a.Key == "Arrivals").Value</h3>
        <div class="line"></div>
        <div class="book-categories row w-50">
            <div class="col-lg-2"><a class="w-100 btn btn-light category-books" asp-controller="Home" asp-action="Index">All</a></div>
            @{

                foreach (Category category in Model.Categories)
                {
                    <div class="col-lg-2"><a class="w-100 btn btn-light category-books" asp-controller="Home" asp-action="Index" asp-route-category="@category.Name">@category.Name</a></div>
                }
            }
        </div>
        <div class="container mt-5">
            <div class="row all">
                @foreach (BookAuthor book in Model.BookAuthors)
                {
                    <div class="col-lg-3 col-md-6 col-sm-6 col-12" data-aos="flip-down">
                        <div class="info-book">
                            <div class="images">
                                <div class="more-icon">
                                    <div class="more">
                                        <a asp-controller="Detail" asp-action="Details" asp-route-id="@book.Book.Id"><i class="fa-solid fa-link"></i></a>
                                    </div>
                                    <div class="more">
                                        <a asp-controller="WishList" asp-action="WishList"><i class="fa-solid fa-heart"></i></a>
                                    </div>
                                    <div class="more">
                                        <a href=""><i class="fa-solid fa-magnifying-glass"></i></a>
                                    </div>
                                </div>
                                @if (book.Book.DiscountId != null && book.Book.DiscountId != 4)
                                {
                                    <div class="sale bg-danger texr-center">
                                        <span class="text-light">Sale</span> <br />
                                        <span class="text-light">@book.Book.Discount.DiscountPercent%</span>
                                    </div>
                                }
                                <a asp-controller="Detail" asp-action="Details" asp-route-id="@book.Book.Id"><img src="~/assets/Image/Library/@book.Book.BookImages.FirstOrDefault(i => i.IsMain == true)?.ImagePath"></a>
                            </div>
                            <div class="detail mt-3">
                                <p>
                                    @book.Author?.FullName.ToString()
                                </p>
                                <strong>@book.Book.Name.ToString()</strong>
                                <p>
                                    @if (book.Book.DiscountId != null && book.Book.DiscountId != 4)
                                    {
                                        <span>$@(book.Book.Price - ((book.Book.Price * book.Book.Discount.DiscountPercent) / 100))</span>
                                        <span class="ms-2"><del>$@book.Book.Price</del></span>
                                    }
                                    else if (book.Book.DiscountId == 4)
                                    {
                                        <span>$@book.Book.Price</span>
                                    }
                                    else
                                    {
                                        <span>$@book.Book.Price</span>
                                    }

                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <section id="read-section" style="background-image: url(/assets/Image/Grandmother/@Model.Festival.Image);">
        <div class="container">
            <div class="read d-flex align-items-center justify-content-center">
                <div class="read-info text-center">
                    <h4>@Model.Festival.Subtitle</h4>
                    <h2>@Model.Festival.Title</h2>
                    <p>@Model.Festival.Subtitle</p>
                    <a asp-controller="Book" asp-action="Index" class="btn btn-danger">Shop Now</a>
                </div>
            </div>
        </div>
    </section>
    <section id="author-section" class="py-5">
        <div class="container">
            <h4 class="text-center">@service.GetData().Result.FirstOrDefault(l => l.Key == "BestAuthor").Value</h4>
            <div class="line"></div>
            <div class="row mt-5">
                <div class="col-lg-5">
                    <div class="owl-one owl-carousel owl-theme">
                        @foreach (Book bestBook in Model.AnotherBooks.Where(b => b.IsBest == true))
                        {
                            <div class="col-md-6 col-sm-6 col-12">
                                <div class="infos-book">
                                    <div class="images">
                                        <div class="more-icon">
                                            <div class="more">
                                                <a href=""><i class="fa-solid fa-link"></i></a>
                                            </div>
                                            <div class="more">
                                                <a href=""><i class="fa-solid fa-heart"></i></a>
                                            </div>
                                            <div class="more">
                                                <a href=""><i class="fa-solid fa-magnifying-glass"></i></a>
                                            </div>
                                        </div>
                                        <a asp-controller="Detail" asp-action="Details" asp-route-id="@bestBook.Id"><img src="~/assets/Image/Library/@bestBook.BookImages.FirstOrDefault(i => i.IsMain == true)?.ImagePath"></a>
                                    </div>
                                    <div class="detail mt-3">
                                        <p>
                                            @foreach (BookAuthor author in Model.BookAuthors.Where(b => b.BookId == bestBook.Id))
                                            {
                                                @author.Author.FullName.ToString()
                                            }
                                        </p>
                                        <strong>@bestBook.Name</strong>
                                        @if (bestBook.DiscountId != null && bestBook.DiscountId != 4)
                                        {
                                            <span>$@(bestBook.Price - ((bestBook.Price * bestBook.Discount?.DiscountPercent) / 100))</span>
                                            <span class="ms-2"><del>$@bestBook.Price</del></span>
                                        }
                                        else
                                        {
                                            <span>$@bestBook.Price</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="author-info row d-flex justify-content-between">
                        <div class="author-image col-lg-6">
                            <div class="social-medias">
                                @foreach (AuthorSocialMedia socialMedia in Model.Author.AuthorSocialMedias.Where(s => s.AuthorId == Model.Author.Id))
                                {
                                    <i class="@socialMedia.SocialMedia?.Icon"></i>
                                }
                            </div>
                            <img src="~/assets/Image/AuthorImage/@Model.Author.Image" alt="">
                        </div>
                        <div class="awards col-lg-6">
                            <div class="name d-flex justify-content-between">
                                <strong>@Model.Author.FullName</strong>
                                <p>-author</p>
                            </div>
                            <div class="words">
                                <p>
                                    "@Model.Author.Comments"
                                </p>
                            </div>
                            <div class="myAwards mt-3">
                                <h5>My Awards</h5>
                                <div class="award-image row mt-3">
                                    @foreach (AuthorAward authorAward in Model.Author.AuthorAwards.Where(aw => aw.AuthorId == Model.Author.Id))
                                    {
                                        <div class="col-lg-4 col-md-6 col-sm-6 col-6 award-img">
                                            <img src="~/assets/Image/Awards/@authorAward.Award?.Image" alt="">
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="offer-section"
             style="background-image: url(/assets/Image/Offer/@Model.Offer.Image);">
        <div class="container">
            <div class="offer">
                <div class="offer-description">
                    <p>@Model.Offer.Name</p>
                    <h2>@Model.Offer.Offers</h2>
                    <small>
                        @Model.Offer.Description
                    </small> <br>
                    <a asp-controller="Book" asp-action="Index" class="btn btn-danger mt-4">Shop Now</a>
                </div>
            </div>
        </div>
    </section>
