                                <p>
                                    @foreach (BookAuthor author in Model.BookAuthors.Where(b => b.BookId == dealBook.Id))
                                    {
                                        @author.Author.FullName.ToString();
                                    }
                                </p>
                                <strong>@dealBook.Name</strong> <br />
                                @if (dealBook.DiscountId != null && dealBook.DiscountId != 4)
                                {
                                    <span>$@(dealBook.Price - ((dealBook.Price * dealBook.Discount?.DiscountPercent) / 100))</span>
                                    <span class="ms-2"><del>$@dealBook.Price</del></span>
                                }
                                else
                                {
                                    <span>$@dealBook.Price</span>
                                }
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </section>
    <section id="gift-section" style="background-image: url(/assets/Image/Offer/@Model.Gift.Image);">
        <div class="container">
            <div class="gift d-flex justify-content-center align-items-center  ">
                <div class="gift-info text-center">
                    <h2>@Model.Gift.Name</h2>
                    <small>@Model.Gift.Description</small> <br>
                    <a asp-controller="Book" asp-action="Index" class="btn btn-danger mt-4">Shop Now</a>
