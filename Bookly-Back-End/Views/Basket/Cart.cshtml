@{
    ViewData["Title"] = "Cart";
    BasketVM basket = await service.GetBasket();
    List<BasketItem> userBaskets = await service.UserBasket(User.Identity.Name);
    decimal total = default;
    @foreach (BasketItem userBasket in userBaskets)
    {
        if (userBasket.Book.DiscountId != null)
        {
            (total += (userBasket.Price - ((userBasket.Price * userBasket.Book.Discount.DiscountPercent) / 100)) * userBasket.Count).ToString();
        }
        else
        {
            (total += userBasket.Price * userBasket.Count).ToString();
        }
    }
    decimal ViewTotal = total;
    
}
@model OrderVM

<section id="intro">
    <div class="container">
        <div class="write  d-flex justify-content-center align-items-center">
            <div class="texts">
                <h4 class="text-center">Product</h4>
                <ul class="d-flex justify-content-around">
                    <li><a asp-controller="Book" asp-action="Index">All</a></li>
                    <li><a asp-controller="Basket" asp-action="Cart">Shopping Cart</a></li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section id="basket-section" class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8  basket-products">
                <h5>Products</h5>
                @if (User.Identity.IsAuthenticated)
                {

                    @if (userBaskets != null)
                    {
                        @foreach (var userCart in userBaskets)
                        {
                            <div class="basket-product row">
                                <div class="col-lg-3 col-md-12">
                                    <img src="~/assets/Image/Library/@userCart.Book.BookImages.FirstOrDefault(i => i.IsMain == true).ImagePath" alt="">
                                </div>
                                <div class="col-lg-3 col-md-12 d-flex align-items-center product-info">
                                    <div class="informations">
                                        <strong class="mt-2">@userCart.Book.Name</strong>
                                        <p class="mt-2"></p>
                                        <p class="mt-2">
                                            $
                                            @if (userCart.Book.DiscountId != null)
                                            {
                                                @((userCart.Book.Price - ((userCart.Book.Price * userCart.Book.Discount.DiscountPercent) / 100)) * userCart.Count)
                                            }
                                            else
                                            {
                                                @(userCart.Book.Price * userCart.Count)
                                            }
                                        </p>
                                        <div class="d-flex justify-content-start quantity-content">
                                            <div style="border: 1px solid #e9e9e9;"
                                                 class="col-lg-3 col-md-3 count-manage minus d-flex align-items-center justify-content-center">
                                                <strong>-</strong>
                                            </div>
                                            <div style="border: 1px solid #e9e9e9;"
                                                 class="col-lg-4 col-md-5 d-flex align-items-center justify-content-center">
                                                <strong class="quantity">0</strong>
                                            </div>
                                            <div style="border: 1px solid #e9e9e9;"
                                                 class="col-lg-3 col-md-3 count-manage plus d-flex align-items-center justify-content-center">
                                                <strong>+</strong>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }

                }
                else
                {
                    @if (basket != null)
                    {
                        @foreach (BasketItemVM userCart in basket.BasketItemVMs)
                        {
                            <div class="basket-product row">
                                <div class="col-lg-3 col-md-12">
                                    <img src="~/assets/Image/Library/@userCart.Book.BookImages.FirstOrDefault(i => i.IsMain == true).ImagePath" alt="">
                                </div>
                                <div class="col-lg-3 col-md-12 d-flex align-items-center product-info">
                                    <div class="informations">
                                        <strong class="mt-2">@userCart.Book.Name</strong>
                                        <p class="mt-2"></p>
                                        <p class="mt-2">
                                            $
                                            @if (userCart.Book.DiscountId != null)
                                            {
                                                @(userCart.Book.Price - ((userCart.Book.Price * userCart.Book.Discount.DiscountPercent) / 100));
                                            }
                                            else
                                            {
                                                @userCart.Book.Price;
                                            }
                                        </p>
                                        <div class="d-flex justify-content-start quantity-content">
                                            <div style="border: 1px solid #e9e9e9;"
                                                 class="col-lg-3 col-md-3 count-manage minus d-flex align-items-center justify-content-center">
                                                <strong>-</strong>
                                            </div>
                                            <div style="border: 1px solid #e9e9e9;"
                                                 class="col-lg-4 col-md-5 d-flex align-items-center justify-content-center">
                                                <strong class="quantity">0</strong>
                                            </div>
                                            <div style="border: 1px solid #e9e9e9;"
                                                 class="col-lg-3 col-md-3 count-manage plus d-flex align-items-center justify-content-center">
                                                <strong>+</strong>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }
            </div>

            <div class="col-lg-4 order-summary">
                <h5>Order Summary</h5>
                <div class="w-50">
                    <div class="mb-3 text-danger">
                        <strong>Subtotal:</strong>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (userBaskets != null)
                            {
                                <span>@ViewTotal</span>
                            }
                            else
                            {
                                <span>$0.00</span>
                            }
                        }
                        else
                        {
                            @if (basket != null)
                            {
                                <span>$@basket.TotalPrice</span>
                            }
                            else
                            {
                                <span>$0.00</span>
                            }
                        }
                    </div>
                    <a class="btn btn-danger messages" style="border-radius: 0px;">Add a note to your order</a>
                    <div class="text-message mt-3">
                        <span>Special instructions for seller</span>
                        <form method="post">
                            <textarea name="" asp-for="Order.Message" cols="60" rows="7" class="mt-2"></textarea>
                        </form>
                    </div>
                </div>
                <p class="mt-3">Shipping, taxes, and discounts will be calculated at checkout.</p>
                <a asp-controller="Order" asp-action="Checkout" class="btn btn-danger w-100" style="border-radius: 0px;">Proceed Checkout</a>
                <a class="btn btn-danger w-100 mt-3 order-country" style="border-radius: 0px;">
                    Get shipping
                    estimates <span><i class="fa-solid fa-angle-down"></i></span>
                </a>
                <div class="location-order">
                    <label for="" class="mt-2">Country</label> <br>
                    <select name="" id="" class="w-100 mt-2">
                        <option value="">Azerbaijan</option>
                    </select> <br>
                    <label for="" class="mt-2">State</label> <br>
                    <select name="" id="" class="w-100 mt-2">
                        <option value="">Ganja</option>
                        <option value="">Baki</option>
                        <option value="">Sumgayit</option>
                        <option value="">Nakhchivan</option>
                        <option value="">Zenguzar</option>
                    </select>
                    <form action="" class="mt-2">
                        <label for="">Zip/Postal Code</label> <br>
                        <input type="text" class="w-100">
                    </form>
                </div>
            </div>
            <div class="col-lg-8 d-flex justify-content-between mt-4">
                <div>
                    <a href="" class="btn btn-danger cart">Continue Shopping</a>
                </div>
                <div>
                    <a href="" class="btn btn-danger cart">Update Cart</a>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts{

    <script src="~/assets/Js/basket.js"></script>
}

